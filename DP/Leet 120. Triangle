class Solution {
    public int minimumTotal(List<List<Integer>> triangle) {
        int m = triangle.size();
        int[]dp = new int[m];
        
        //last line
        for(int i = 0; i < m; i++){
            dp[i] = triangle.get(m-1).get(i);
        }

        for(int i = m-2; i >= 0; i--){
            for(int j = 0; j < triangle.get(i).size(); j++){
                dp[j] = triangle.get(i).get(j) + Math.min(dp[j], dp[j+1]);
            }
        }
        return dp[0];
    }
}
